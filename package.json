{
  "name": "playlist.party-server",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "./node_modules/.bin/nodemon index.js",
    "test": "./node_modules/.bin/jest src/",
    "lint": "./node_modules/.bin/standard",
    "deploy": "./node_modules/.bin/now -e NODE_ENV=production --token $NOW_TOKEN --npm --public",
    "alias": "./node_modules/.bin/now alias --token=$NOW_TOKEN"
  },
  "author": "antoinechalifour <antoine.chalifour@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^5.0.1",
    "jsonwebtoken": "^8.3.0",
    "koa": "^2.5.1",
    "koa-ejs": "^4.1.1",
    "socket.io": "^2.1.1",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "jest": "^22.4.4",
    "nodemon": "^1.17.4",
    "now": "^11.1.16",
    "socket.io-client": "^2.1.1",
    "standard": "^11.0.1"
  },
  "standard": {
    "ignore": [
      "**/*.spec.js"
    ]
  },
  "now": {
    "name": "playlistparty-server",
    "alias": "playlistparty-server",
    "env": {
      "NODE_ENV": "production",
      "PORT": 3000,
      "JWT_SECRET": "@jwt-secret"
    }
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}